<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>My Recipes</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>

    <h1>Welcome to My Recipes</h1>

    <ul>
        <% recipes.forEach(recipe => { %>
            <li>
                <a href="/recipes/<%= recipe._id %>"><%= recipe.name %></a>
            </li>
        <% }); %>
    </ul>

    <a href="/recipes/new">Add New Recipe</a>

<% recipes.forEach(recipe => { %>
    <div>
        <h2><%= recipe.name %></h2>
        <p><%= recipe.instructions %></p>

        <!-- Show Recipe Button -->
        <a href="/recipes/<%= recipe._id %>">View Recipe</a>

        <!-- Delete Recipe Button -->
        <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
          
          
    </div>
<% }); %>
<% recipes.forEach(recipe => { %>
    <div>
      <h2><a href="/recipes/<%= recipe._id %>"><%= recipe.name %></a></h2>
      <a href="/recipes/<%= recipe._id %>/edit">Edit</a>
      <form action="/recipes/<%= recipe._id %>?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
      </form>
    </div>
  <% }) %>
  
    
</body>
</html>
